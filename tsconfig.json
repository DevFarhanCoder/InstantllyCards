{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": false,
    "allowJs": true,
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "include": [
    "app",
    "src",
    "**/*.ts",
    "**/*.tsx",
    "expo-env.d.ts",
    ".expo/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "metro.config.js",
    "babel.config.js",
    "jest.config.js"
  ]
}
